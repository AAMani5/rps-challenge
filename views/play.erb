<p><%=@game.player1.name%> vs. <%=@game.player2.name%></p>
<html>
<p></p>
<p></p>
<%if @game.both_players_chose? %>
  <p><%=@game.player1.name%> selected <%=@game.player1.selection%></p>
  <p><%=@game.player2.name%> selected <%=@game.player2.selection%></p>
  <p><%=@game.winner%></p>
  <form name="options" action="/" method="GET">
    <input type="submit" value="Retry" id="retry">
  </form>
<% else %>
  <p></p>
  <p></p>
  <%=@game.current_player.name%>'s turn
  <form name="options" action="/selection" method="POST">
    <input type="radio" name="selection" value="rock" id="rock"> Rock<br>
    <input type="radio" name="selection" value="paper" id="paper"> Paper<br>
    <input type="radio" name="selection" value="scissors" id="scissors"> Scissors<br>
    <p></p>
    <p></p>
    <input type="submit" value="Submit" id="selected">
  </form>
<% end %>

</html>
